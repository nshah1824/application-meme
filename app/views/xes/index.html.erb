<p id="notice"><%= notice %></p>

<h1>Xes</h1>

<table class="w3-table-all">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @xes.each do |x| %>
      <tr>
        <td><%= x.name %></td>
        <td><%= link_to 'Show', x , class:"w3-button w3-hover-purple" %></td>
        <td><%= link_to 'Edit', edit_x_path(x) , class:"w3-button w3-hover-purple" %></td>
        <td><%= link_to 'Destroy', x, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-hover-purple" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New X', new_x_path , class:"w3-button w3-hover-purple" %>
